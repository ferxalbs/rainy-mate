{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Rainy MaTE",
  "version": "0.5.22",
  "identifier": "com.enosislabs.rainycowork",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "Rainy MaTE",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "decorations": true,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEI4NTBDMzM2MzAxREY4RTEKUldUaCtCMHdOc05RdUVPb29kMTk1Mm9QZXd1Q1FOUGRMN2NjVFRVV3pDS01Eay9MMTZJWmtnTVYK",
      "endpoints": [
        "https://github.com/ferxalbs/rainy-mate/releases/latest/download/latest.json"
      ]
    }
  }
}
